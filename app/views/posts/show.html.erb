<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<p>
  <strong>Item:</strong>
  <%= @post.item %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <% if @post.avatar.attached? %>
    <strong>Image:</strong>
    <%= image_tag url_for(@post.avatar) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
